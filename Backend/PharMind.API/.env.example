# PharMind API - Environment Variables Example
# Copy this file to .env.local and fill with your actual values
# NEVER commit .env.local to source control!

# Database Connection
ConnectionStrings__DefaultConnection=Server=localhost;Database=PharMind;Trusted_Connection=True;TrustServerCertificate=True;

# JWT Configuration (MUST be at least 32 characters)
Jwt__Key=YOUR_SUPER_SECRET_JWT_KEY_HERE_MINIMUM_32_CHARACTERS
Jwt__Issuer=PharMind.API
Jwt__Audience=PharMind.Client
Jwt__ExpiryInMinutes=1440

# API Settings
ApiSettings__AllowedOrigins=http://localhost:5173;http://localhost:4200
ApiSettings__MaxRequestBodySizeMB=300
ApiSettings__RequestTimeoutMinutes=5

# ASPNETCORE Environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development
