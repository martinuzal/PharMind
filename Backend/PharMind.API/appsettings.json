{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=PharMind;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "REPLACE_WITH_USER_SECRETS_OR_ENVIRONMENT_VARIABLE",
    "Issuer": "PharMind.API",
    "Audience": "PharMind.Client",
    "ExpiryInMinutes": 1440
  },
  "ApiSettings": {
    "AllowedOrigins": "http://localhost:5173;http://localhost:4200",
    "MaxRequestBodySizeMB": 300,
    "RequestTimeoutMinutes": 5
  }
}
