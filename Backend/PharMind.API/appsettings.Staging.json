{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "REPLACE_WITH_STAGING_CONNECTION_STRING"
  },
  "Jwt": {
    "Key": "REPLACE_WITH_STAGING_SECRET",
    "Issuer": "PharMind.API",
    "Audience": "PharMind.Client",
    "ExpiryInMinutes": 1440
  },
  "ApiSettings": {
    "AllowedOrigins": "https://staging.yourdomain.com",
    "MaxRequestBodySizeMB": 200,
    "RequestTimeoutMinutes": 5
  }
}
